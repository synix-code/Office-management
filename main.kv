<LoginScreen>:
    name: "login"
    FloatLayout:
        Label:
            text: "Welcome Back sir"
            pos_hint: {"center_x":0.5,"center_y":0.95}
            font_size: "45sp"
            font_name: "fnt/shimosa.regular.ttf"
            bold: True
            italic: True
            color: "FF69B4"

        MDCard:
            size_hint: None, None
            size: "280dp", "200dp"
            elevation: 4
            radius: [20, 20, 20, 20]
            padding: dp(16)
            pos_hint: {"center_x": 0.5, "center_y": 0.68}
            md_bg_color: 1, 1, 1, 1  # white background

        MDTextField:
            id: email_log
            hint_text: "Enter your Email"
            helper_text: ""
            size_hint_x: None
            width: dp(250)
            #mode: "rectangle"
            icon_left: "account"
            pos_hint: {"center_x": 0.5, "center_y": 0.78}

        MDTextField:
            id: eye_btn
            hint_text: "Enter your Password"
            helper_text: ""
            size_hint_x: None
            password: True
            width: dp(250)
            #mode: "rectangle"
            icon_left: "key"
            pos_hint: {"center_x": 0.5, "center_y": 0.67}

        MDIconButton:
            id: change_eye
            icon: "eye" 
            size_hint: (.1,.06)
            pos_hint: {"center_x": 0.85, "center_y": 0.67}
            on_release: app.go_back()  # Function to call when clicked
            theme_text_color: "Custom"
            text_color: "FF69B4"
            on_release: app.password_show_hide()

        MDRaisedButton:
            id: login
            text: "Login"
            text_color: 1, 1, 1, 1
            pos_hint: {"center_x":0.5,"center_y":0.58}
            font_size: "10sp"
            font_name: "fnt/horror-Origins-demo.ttf"
            bold: True
            italic: True
            color: (0,0,1,1)
            md_bg_color: "FF69B4"
            on_release: app.login_clicked()

        Label:
            text: "Don't Have Account ? "
            pos_hint: {"center_x":0.5,"center_y":0.4}
            font_size: "14sp"
            font_name: "fnt/horror-Origins-demo.ttf"
            bold: True
            italic: True
            color: (0,0,0,1)

        MDRaisedButton:
            text: "Create new account"
            text_color: 1, 1, 1, 1
            pos_hint: {"center_x":0.5,"center_y":0.3}
            font_size: "10sp"
            font_name: "fnt/horror-Origins-demo.ttf"
            bold: True
            italic: True
            color: (0,0,1,1)
            md_bg_color: "FF69B4"
            on_release: app.signup()
            
        MDSpinner:
            id: login_spinner
            size_hint: None, None
            size: dp(70), dp(70)
            pos_hint: {"center_x": 0.5, "center_y": 0.5}
            line_width: 4
            color: (1,0,0,1)
            active: False

        Label:
            text: "AS Developer"
            pos_hint: {"center_x":0.5,"center_y":0.1}
            font_size: "40sp"
            font_name: "fnt/perfecto-calligraphy-personal-use.regular.ttf" 
            bold: True
            italic: True
            color: "1A237E"






<SignupScreen>:
    name: "signup"
    FloatLayout:
        id: all_widget



        MDIconButton:
            icon: "arrow-left"
            pos_hint: {"top": 1, "left": 0}
            on_release: app.go_back()
            theme_text_color: "Custom"
            text_color: 0, 0, 0, 1

        Label:
            text: "Welcome sir"
            pos_hint: {"center_x":0.5,"center_y":0.97}
            font_size: "45sp"
            font_name: "fnt/shimosa.regular.ttf"
            bold: True
            italic: True
            color: "FF69B4"

            

        MDTextField:
            id: company_name
            hint_text: "Enter your Company Name"
            helper_text: ""
            size_hint_x: None
            width: dp(250)
            mode: "rectangle"
            icon_left: "domain"
            pos_hint: {"center_x": 0.5, "center_y": 0.87}
            on_text: app.check_comp()
            on_focus: app.check_comp()

        MDTextField:
            id: owner_name
            hint_text: "Company owner Name"
            helper_text: ""
            size_hint_x: None
            width: dp(250)
            mode: "rectangle"
            icon_left: "account-tie"
            pos_hint: {"center_x": 0.5, "center_y": 0.75}
            on_text: app.check_owner()
            on_focus: app.check_owner()

        MDTextField:
            id: email
            hint_text: "Enter your Email"
            helper_text: ""
            size_hint_x: None
            width: dp(200)
            mode: "rectangle"
            icon_left: "email"
            pos_hint: {"center_x": 0.42, "center_y": 0.63}
            on_text: app.check_email()
            on_focus: app.check_email()

        MDTextButton:
            id: send_mail
            text: "Send OTP"
            text_color: 1, 1, 1, 1
            pos_hint: {"center_x":0.88,"center_y":0.63}
            font_size: "10sp"
            font_name: "fnt/horror-Origins-demo.ttf"
            bold: True
            italic: True
            color: (0,0,1,1)
            on_release: app.send_mail()

        MDTextField:
            id: otp
            hint_text: "Enter OTP"
            helper_text: ""
            size_hint_x: None
            width: dp(250)
            mode: "rectangle"
            icon_left: "shield-key"
            max_text_length: 6
            input_filter: "int"
            pos_hint: {"center_x": 0.5, "center_y": 0.51}
            on_text: app.check_otp()
            on_focus: app.check_otp()

        MDTextField:
            id: password
            hint_text: "Create your Password"
            helper_text: ""
            size_hint_x: None
            width: dp(250)
            mode: "rectangle"
            icon_left: "lock"
            password: True
            pos_hint: {"center_x": 0.5, "center_y": 0.39}
            on_text: app.check_password()
            on_focus: app.check_password()

        MDTextField:
            id: confirm_password
            hint_text: "Confirm your Password"
            helper_text: ""
            size_hint_x: None
            width: dp(250)
            mode: "rectangle"
            icon_left: "lock-check"
            password: True
            pos_hint: {"center_x": 0.5, "center_y": 0.27}
            on_text: app.check_password_con()
            on_focus: app.check_password_con()

        MDRaisedButton:
            id: request
            text: "Request a account"
            disabled: True
            text_color: 1, 1, 1, 1
            pos_hint: {"center_x":0.5,"center_y":0.15}
            font_size: "10sp"
            font_name: "fnt/horror-Origins-demo.ttf"
            bold: True
            italic: True
            color: (0,0,1,1)
            md_bg_color: "FF69B4"
            size_hint: (0.83, 0.03)
            on_release: app.validate_signup()
            
        MDSpinner:
            id: sign_spinner
            size_hint: None, None
            size: dp(70), dp(70)
            pos_hint: {"center_x": 0.5, "center_y": 0.5}
            line_width: 4
            color: (1,0,0,1)
            active: False












        Label:
            text: "AS Developer"
            pos_hint: {"center_x":0.5,"center_y":0.05}
            font_size: "40sp"
            font_name: "fnt/perfecto-calligraphy-personal-use.regular.ttf" 
            bold: True
            italic: True
            color: "1A237E"












<MainScreen>:
    name: "home"
    
    FloatLayout:

        MDLabel:
            id: empty_main
            text: "Note: Your employee list is empty, please add your employee from your profile section."
            halign: "justify"
            theme_text_color: "Secondary"
            color: 1,0,0,1
            font_style: "Body2"
            size_hint_x: 0.9
            size_hint_y: None
            height: self.texture_size[1]
            pos_hint: {"center_x": 0.5, "center_y": 0.5}
            bold: True
            opacity: 0

        ScrollView:
            size_hint: 1, None
            height: root.height - dp(56)
            pos_hint: {"top": 0.9}  # Slight gap under TopAppBar

            MDList:
                id: main_list

                

        
        MDTopAppBar:
            title: ""
            size_hint_y: None
            height: "56dp"
            md_bg_color: (0.8, 0.8, 0.8, 1)  # Dark blue color
            elevation: 1
            pos_hint: {"top": 1}

        Image:
            source: "images/logo.png"
            size_hint: None, None
            size: dp(50), dp(50)
            pos_hint: {"top": 0.99, "left": 0}
            #pos_hint: {"top": 10}
            #pos_hint: {"left": 1}
            

        
        Label:
            text: "Home"
            color: 0, 0, 0, 1  # White color for text
            font_name: "fnt/shimosa.regular.ttf"  # Custom font
            font_size: "40sp"
            size_hint: None, None
            size: "300dp", "50dp"
            pos_hint: {"center_x": 0.5, "center_y": 0.8}
            pos_hint: {"top": 0.99}

        NavBar:
            size_hint: .9, .1
            pos_hint: {"center_x":0.5,"center_y":0.1}
            md_bg_color: 1,1,1,1
            #elevation: 1
            radius: [16, 16, 16, 16]
            canvas.before:
                Color:
                    rgba: (0.8, 0.8, 0.8, 1)  # white background
                RoundedRectangle:
                    pos: self.pos
                    size: self.size
                    radius: self.radius
            GridLayout:
                cols: 5
                size_hint_x: .9
                pos_hint: {"center_x":0.5,"center_y":0.5}
                spacing: dp(-1)
                padding: dp(7)
                MDIconButton:
                    id: nav_home
                    icon: "home"
                    ripple_scale: 0
                    user_font_size: "30sp"
                    theme_text_color: "Custom"
                    text_color: "FF69B4"
                    on_release: app.home_screen()

                MDIconButton:
                    id: nav_entry
                    icon: "plus-box"
                    ripple_scale: 0
                    user_font_size: "30sp"
                    theme_text_color: "Custom"
                    text_color: 0,0,0,1
                    on_release: app.entry_screen()

                MDIconButton:
                    id: nav_attendence
                    icon: "account-check"
                    ripple_scale: 0
                    user_font_size: "30sp"
                    theme_text_color: "Custom"
                    text_color: 0,0,0,1
                    on_release: app.attendence_screen()

                MDIconButton:
                    id: nav_view
                    icon: "download"
                    ripple_scale: 0
                    user_font_size: "30sp"
                    theme_text_color: "Custom"
                    text_color: 0,0,0,1
                    on_release: app.view_screen()

                MDIconButton:
                    id: nav_settings
                    icon: "cog"
                    ripple_scale: 0
                    user_font_size: "30sp"
                    theme_text_color: "Custom"
                    text_color: 0,0,0,1
                    on_release: app.settings_screen()

        MDSpinner:
            id: home_spinner
            size_hint: None, None
            size: dp(80), dp(80)
            pos_hint: {"center_x":0.5,"center_y":0.5}
            active: True
            color: 1, 0.4, 0.7, 1  # Pink color (same as "Office Hub" text)
            

        

